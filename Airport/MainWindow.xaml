<Window x:Class="Airport.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:uc ="clr-namespace:Airport.Views">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <uc:TopBArView Grid.ColumnSpan="2"/>
        <uc:AirportView Grid.Row="2" Grid.Column="2"/>
        <uc:FlightsView Grid.Row="1" Grid.Column="1"/>
        <uc:AirportLegsView Grid.Row="1" Grid.RowSpan="2"/>
    </Grid>
</Window>
